<div>
  <h1 class="edit-heading">Editing Book</h1>
</div>


  <% if @edit_book.errors.any? %>
    <div class="error-box">
      <h2 class="error-title"><%= @edit_book.errors.count %> errors prohibited this book from being saved:</h2>

      <ul class="error-message">
        <% @edit_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model: @edit_book do |f| %>

  <div class="input-field">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  
  <div class="input-field">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  
  <div class="button-field">
    <%= f.submit "Update Book" %>
  </div>
  
<% end %>
<span class="edit-link links"><%= link_to "Show", book_path(@edit_book.id) %></span>
<span>|</span>
<span class="edit-link links"><%= link_to "Back", "/books" %></span>