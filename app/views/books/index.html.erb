<div class="destroy-message">
  <%= flash[:notice] %>
</div>

<div class="heading">
  <h1>Books</h1>
</div>

<table class="index-table">

  <tr class="table-heading">
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>

  <div class="table-content">
    <% @index_books.each do |book| %>
      <tr>
        <div class="table-content">
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td class="table-link"><%= link_to "Show", book_path(book.id)%></td>
          <td class="table-link"><%= link_to "Edit", edit_book_path(book.id)%></td>
          <td class="table-link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </div>
      </tr>
    <% end %>
  </div>

</table>

<div class="new-form">

  <h2 class="new-heading">New book</h2>

  <%= form_with model: @new_book do |f| %>

    <div class="field">
      <h4 class="field-name">Title</h4>
      <%= f.text_field :title %>
    </div>

    <div>
      <h4 class="field-name">Body</h4>
      <%= f.text_area :body %>
    </div>

    <div class="field-button">
      <%= f.submit "Create Book" %>
    </div>

  <% end %>
</div>